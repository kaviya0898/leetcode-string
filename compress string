public static void main(String[] args) {
		String str="aaabbbc";
		
		
		   String res = "";
	          for( int i = 0; i < str.length() ; ++i )
	          {
	              int count = 1;
	              while( (i < str.length() - 1) && str.charAt(i) == str.charAt(i+1) )
	              {
	                  i++;
	                  count++;
	              }
	              res += str.charAt(i) + Integer.toString(count);
	              
	          }
	          System.out.print(res);
		}
	 
